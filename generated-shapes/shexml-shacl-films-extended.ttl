@prefix :      <http://example.com/> .
@prefix schema: <http://schema.org/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix dbr:   <http://dbpedia.org/resource/> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

:AppearanceActor  a     sh:NodeShape ;
        sh:property     [ sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      :film
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      :role
                        ] ;
        sh:property     [ sh:in    ( :Appearance ) ;
                          sh:path  rdf:type
                        ] ;
        sh:targetClass  :AppearanceActor .

:AppearanceActress  a   sh:NodeShape ;
        sh:property     [ sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      :film
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      :role
                        ] ;
        sh:property     [ sh:in    ( :Appearance ) ;
                          sh:path  rdf:type
                        ] ;
        sh:targetClass  :AppearanceActress .

:Films  a               sh:NodeShape ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      schema:director
                        ] ;
        sh:property     [ sh:in    ( "@en" ) ;
                          sh:path  schema:name
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      schema:musicBy
                        ] ;
        sh:property     [ sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      schema:countryOfOrigin
                        ] ;
        sh:property     [ sh:class     :Actor ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      schema:actor
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:minCount  1 ;
                          sh:path      :screenwriter
                        ] ;
        sh:property     [ sh:in    ( schema:Movie ) ;
                          sh:path  rdf:type
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      :cinematographer
                        ] ;
        sh:property     [ sh:class     :Actress ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      schema:actor
                        ] ;
        sh:property     [ sh:datatype  xsd:integer ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      :year
                        ] ;
        sh:targetClass  :Films .

:Actor  a               sh:NodeShape ;
        sh:property     [ sh:class     :AppearanceActor ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      :appear_on
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      schema:name
                        ] ;
        sh:property     [ sh:in    ( schema:Person ) ;
                          sh:path  rdf:type
                        ] ;
        sh:targetClass  :Actor .

:Actress  a             sh:NodeShape ;
        sh:property     [ sh:class     :AppearanceActress ;
                          sh:nodeKind  sh:IRI ;
                          sh:path      :appear_on
                        ] ;
        sh:property     [ sh:datatype  xsd:string ;
                          sh:maxCount  1 ;
                          sh:minCount  1 ;
                          sh:path      schema:name
                        ] ;
        sh:property     [ sh:in    ( schema:Person ) ;
                          sh:path  rdf:type
                        ] ;
        sh:targetClass  :Actress .
